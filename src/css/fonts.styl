@font-face {
  font-family: 'PT Mono';
  src: local('PT Mono'), local('PTMono-Regular'), url('fonts/ptmono/ptmono.woff2') format('woff2'), url('fonts/ptmono/ptmono.woff') format('woff'), url('fonts/ptmono/ptmono.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: 'PT Mono';
  src: local('PT Mono Bold'), local('PTMono-Bold'), url('fonts/ptmono/ptmonobold.woff2') format('woff2'), url('fonts/ptmono/ptmonobold.woff') format('woff'), url('fonts/ptmono/ptmonobold.ttf') format('truetype');
  font-weight: 700;
  font-style: normal;
}
